<div class="row">
  <h2 class="heading text-center">会員詳細</h2>

  <div class="col-sm-2">
    <h3>会員情報</h3>
    <%= attachment_image_tag @customer, :profile_image, :fill, 120, 120, fallback: "no_customer_image.jpg", size: "120x120", class: "profile-image"  %><br>
    <p><%= @customer.nickname %></p>
    <div>
      <%= link_to "登録情報編集", edit_customer_path(@customer), class: "btn btn-success btn-block" %>
    </div>
    <div>
      <%= link_to "パスワード変更", edit_customer_registration_path(@customer), class: "btn btn-primary btn-block" %>
    </div>
  </div>

  <div class="col-sm-offset-1 col-sm-9">
    <h3>投稿</h3>

    <% @customer.pairs.each do |pair| %>
    <div class=col-sm-4>
      <%= link_to pair_path(pair) do %>
        <%= attachment_image_tag pair, :image, :fill, 270, 270, fallback: "no_image.jpg", size: "230x230", class: "pair-image" %>
        <h5><%= pair.title %></h5>
      <% end %>
    </div>
  <% end %>
  </div>

</div>
