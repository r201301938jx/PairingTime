<div class="row">
  <%= render 'customer/pairs/search_form' %>
</div>

<div class="row col-sm-12">
  <div class="row top-heading text-center">
    <h1 class="top-title "><strong>Welcome to PairingTime</strong></h1>
    <br>
    <p class="top-description">~ 皆さんがほっと一息つく時間をもっと楽しく ~</p>
  </div>

  <div class="row">
    <%= render 'customer/pairs/index', pairs: @random_pairs %>
  </div>

  <% if customer_signed_in? %>
    <div class="col-sm-offset-3 col-sm-6">
      <h1 class="ranking-title text-center"><strong>ランキング</strong></h1>
    </div>
  <div class="col-sm-12">
  <div class="col-sm-3">
    <h2 class="text-center ranking-heading"><strong><u>タグ</u></strong></h2>
    <%= render 'customer/pairs/tag_ranking_index', tags: @tag_ranks %>
  </div>

  <div class="row col-sm-9">
    <h2 class="text-center ranking-heading"><strong><u>お気に入り追加数</u></strong></h2>
    <%= render 'customer/pairs/ranking_index', pairs: @like_ranks %>
  </div>
</div>

  <div class="row col-sm-12">
    <h2 class="text-center ranking-heading"><strong><u>フォロワー数</u></strong></h2>
    <%= render 'customer/customers/ranking_index', customers: @follower_ranks %>
  </div>

  <% end %>

  <div class="row text-center link-button">
    <div class="col-sm-6">
      <%= link_to "お問い合わせ", new_contact_path, class: "btn btn- btn-lg btn-primary col-sm-12" %>
    </div>
    <div class="col-sm-6">
      <%= link_to "投稿をもっと見る", pairs_path, class: "btn btn-lg  btn-success col-sm-12" %>
    </div>
  </div>

</div>



