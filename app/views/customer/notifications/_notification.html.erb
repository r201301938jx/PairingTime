<% visiter = notification.visiter %>
<% pair = notification.pair %>

<div class="col-sm-12 col-xs-12 notification-box">
  <div class="col-sm-1 col-xs-2">
    <%= link_to customer_path(notification.visiter) do %>
  <%= attachment_image_tag visiter, :profile_image, :fill, 60, 60, fallback: "no_customer_image.jpg", size: "60x60", class: "profile-image" %>
  <% end %>
  </div>
  <div class="notification-message">
    <div class="col-sm-9 col-xs-7">
    <%= notification_form(notification) %><span><%= "(#{time_ago_in_words(notification.created_at)}前)" %></span>
  </div>
  <div class="col-sm-2 col-xs-3">
    <%= link_to notification_path(notification), method: :DELETE do %>
    <p class="btn btn-danger btn-block">
      <i class="fas fa-trash-alt"> 削除</i>
    </p>
    <% end %>
  </div>
  </div>
</div>
