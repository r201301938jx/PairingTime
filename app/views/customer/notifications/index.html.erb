<div class="row col-sm-offset-1 col-sm-10 col-sm-offset-1">
  <h2 class="heading text-center">通知一覧</h2>
  <% if @notifications.exists? %>
  <div class="col-sm-2">
    <%= link_to notifications_path, method: :DELETE do %>
    <h5 class="btn btn-danger btn-block pull-left">全削除</h5>
    <% end %>
  </div>
  <div>
    <%= render @notifications %>
  </div>
  <% else %>
  <h4>通知はありません</h4>
  <% end %>
</div>