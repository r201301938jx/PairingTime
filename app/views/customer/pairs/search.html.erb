<div class="row">
  <h2 class="heading text-center">タグが「<%= @tag.name %>」の投稿一覧（全<%= @pairs.count %>件）</h2>
  <div class="col-sm-2">
    <h3 class="text-center">タグリスト</h3>
    <% @tag_list.each do |tag| %>
      <span class="label label-info"><%= link_to tag.name, tag_pairs_path(tag_id: tag.id) %></span>
    <% end %>
  </div>
  <div class="col-sm-10">
    <% @pairs.each do |pair| %>
  <div class=col-sm-4>
    <%= link_to pair_path(pair) do %>
    <%= attachment_image_tag pair, :image, :fill, 240, 240, fallback: "no_image.jpg", size: "240x240", class: "pair-image" %>
    <h5 class="text-center"><%= pair.title %></h5>
    <% if customer_signed_in? %>
    <div class="text-center">
      <% if pair.liked_by?(current_customer) %>
      <%= link_to pair_likes_path(pair), method: :DELETE do %>
      <i class="fas fa-heart red-heart"><span><%= pair.likes.count %></span></i>
      <% end %>
      <% else %>
      <%= link_to pair_likes_path(pair), method: :POST do %>
      <i class="far fa-heart"><%= pair.likes.count %></i>
      <% end %>
      <% end %>
      <span>/ コメント数：<%= pair.comments.count %></span>
    </div>
    <% end %>
    <% end %>
  </div>
  <% end %>
  </div>
</div>