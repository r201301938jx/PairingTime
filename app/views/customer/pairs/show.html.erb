<div class="row col-sm-offset-1 col-sm-10 col-sm-offset-1">
  <h2 class="heading text-center">投稿詳細</h2>

  <div class="col-sm-4">
    <%= attachment_image_tag @pair, :image, :fill, 230, 230, fallback: "no_image.jpg", size: "230x230", class: "pair-image"  %>
  </div>

  <div class="col-sm-8">
    <table class="table table-borderless">
      <tbody>
        <tr>
          <td>タイトル</td>
          <td><%= @pair.title %></td>
        </tr>
        <tr>
          <td>説明</td>
          <td><%= @pair.caption %></td>
        </tr>
        <tr>
          <td>タグ</td>
          <td><%= @pair.tag_list %></td>
        </tr>
        <tr>
          <td>投稿日</td>
          <td><%= @pair.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
      </tbody>
    </table>
    <div class="text-center">
      <%= link_to "編集", edit_pair_path(@pair), class: "btn btn-success btn-block" %>
      <%= link_to "削除", pair_path(@pair), method: :DELETE, class: "btn btn-danger btn-block" %>
    </div>
  </div>

</div>