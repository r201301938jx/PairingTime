<div class="sort-form col-sm-4 pull-left">
  <%= form_with(url: sort_pairs_path, method: :GET, local: true) do |f| %>
  <div class="input-group">
    <%= f.select :keyward, [ 
      ['投稿が新しい順', 'new'],
      ['投稿が古い順', 'old'],
      ['お気に入り追加が多い順', 'likes'],
      ['お気に入り追加が少ない順', 'dislikes'],
      ['コメントが多い順', 'many_comments'],
      ['コメントが少ない順', 'few_comments'],
    ],
    {}, class: "form-control" %>
    <span class="input-group-btn">
      <%= f.submit "並び替え", class: "btn btn-warning" %>
    </span>
  </div>
  <% end %>
</div>