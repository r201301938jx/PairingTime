<% pairs.each.with_index(1) do |pair, i| %>
<div class="col-sm-4 col-12 text-center">
  <h4><strong>第<%= i %>位</strong></h4>
  <% if pair.created_at > 24.hours.ago %>
  <span class="badge badge-primary new-badge">New</span>
  <% end %>
  <%= link_to pair_path(pair) do %>
  <%= attachment_image_tag pair, :image, :fill, 250, 250, fallback: "no_image.jpg", size: "250x250", class: "pair-image" %>
  <h5><%= pair.title %></h5>
  <% if customer_signed_in? %>
  <div>
    <% if pair.liked_by?(current_customer) %>
    <%= link_to pair_likes_path(pair), method: :DELETE do %>
    <i class="fas fa-heart red-heart"> <span><%= pair.likes.count %></span></i>
    <% end %>
    <% else %>
    <%= link_to pair_likes_path(pair), method: :POST do %>
    <i class="far fa-heart"> <%= pair.likes.count %></i>
    <% end %>
    <% end %>
    <span> / <i class="fas fa-comment-alt"></i> <%= pair.comments.count %></span>
  </div>
  <% end %>
  <% end %>
</div>
<% end %>