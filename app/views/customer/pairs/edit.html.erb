<div class="row col-sm-offset-1 col-sm-10 col-sm-offset-1">
  <h2 class="heading text-center">投稿編集</h2>

  <%= form_for(@pair, url: pair_path(@pair), method: :PUT) do |f| %>

  <div class="col-sm-4">
    <div class="form-group row text-center">
      <%= f.label :"画像" %><br>
      <%= attachment_image_tag @pair, :image, :fill, 240, 240, fallback: "no_image.jpg", size: "240x240", class: "pair-image"  %>
      <%= f.attachment_field :image %>
    </div>
  </div>

  <div class="col-sm-8">

    <div class="form-group row">
      <%= f.label :"タイトル", class: "col-sm-4" %>
      <div class="col-sm-8">
        <%= f.text_field :title, autofocus: true, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :"説明", class: "col-sm-4" %>
      <div class="col-sm-8">
        <%= f.text_area :caption, autofocus: true, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :"タグ", class: "col-sm-4" %>
      <div class="col-sm-8">
        <%= f.text_area :tag_list, autofocus: true, class: "form-control" %>
      </div>
    </div>

  </div>

  <div class="actions">
    <%= f.submit "編集内容を保存", class: "btn btn-primary btn-block" %>
  </div>

  <% end %>

</div>