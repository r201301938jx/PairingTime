<div class="row col-sm-offset-1 col-sm-10 col-sm-offset-1">
  <h2 class="heading text-center"><%= full_name(@customer)%>さんの登録情報編集</h2>

  <%= form_for(@customer, url: admin_customer_path(@customer), method: :PUT) do |f| %>

  <div class="col-sm-4">
    <div class="form-group row text-center">
      <%= f.label :"プロフィール画像" %>
      <%= attachment_image_tag @customer, :profile_image, :fill, 230, 230, fallback: "no_customer_image.png", size: "230x230", class: "profile-image"  %>
      <%= f.attachment_field :profile_image %>
    </div>
  </div>

  <div class="col-sm-8">

    <div class="form-group row">
      <%= f.label :"会員ID", "会員ID", class: "col-sm-4" %>
      <%= f.label :"#{@customer.id}", class: "col-sm-8" %>
    </div>

    <div class="form-group row">
      <%= f.label :"名前", class: "col-sm-4" %>
      <div class="col-sm-4">
        <%= f.text_field :last_name, autofocus: true, class: "form-control" %>
      </div>
      <div class="col-sm-4">
        <%= f.text_field :first_name, autofocus: true, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :"フリガナ", class: "col-sm-4" %>
      <div class="col-sm-4">
        <%= f.text_field :last_name_kana, autofocus: true, class: "form-control" %>
      </div>
      <div class="col-sm-4">
        <%= f.text_field :first_name_kana, autofocus: true, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :"電話番号", class: "col-sm-4" %>
      <div class="col-sm-8">
        <%= f.text_field :"phone_number", autofocus: true, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :"メールアドレス", class: "col-sm-4" %>
      <div class="col-sm-8">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :"ニックネーム", class: "col-sm-4" %>
      <div class="col-sm-8">
        <%= f.text_field :nickname, autofocus: true, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :"ステータス", class: "col-sm-4" %>
      <div class="col-sm-4 text-center">
        <%= f.radio_button :is_deleted, false %>
        <%= f.label :is_deleted, "有効", {value: :false, style: "display: inline-block;"} %>
      </div>
      <div class="col-sm-4 text-center">
        <%= f.radio_button :is_deleted, true %>
        <%= f.label :is_deleted, "退会済み", {value: :true, style: "display: inline-block;"} %>
      </div>
    </div>

  </div>
  <div class="actions">
    <%= f.submit "編集内容を保存", class: "btn btn-primary btn-block" %>
  </div>

  <% end %>

</div>
