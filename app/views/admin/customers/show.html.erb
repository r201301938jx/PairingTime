<div class="row">
  <h2 class="heading text-center"><%= full_name(@customer)%>さんの会員詳細</h2>

  <div class="col-sm-4">
    <div class="text-center">
      <p>プロフィール画像</p>
      <%= attachment_image_tag @customer, :profile_image, :fill, 260, 260, fallback: "no_customer_image.jpg", size: "260x260", class: "profile-image"  %>
    </div>
  </div>

  <div class="col-sm-8">
    <table class="table table-borderless">
      <tbody>
        <tr>
          <td>会員ID</td>
          <td>
            <%= @customer.id %>
            <% if @customer.is_deleted == true %>
              <span class="badge badge-danger">退会済</span>
            <% else %>
              <span class="badge badge-success">有効会員</span>
            <% end %>
          </td>
        </tr>
        <tr>
          <td>氏名</td>
          <td><%= full_name(@customer) %></td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td><%= full_name_kana(@customer) %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= @customer.phone_number %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
        <tr>
          <td>ニックネーム</td>
          <td><%= @customer.nickname %></td>
        </tr>
      </tbody>
    </table>
    <div class="text-center">
      <%= link_to "会員情報を編集", edit_admin_customer_path, class: "btn btn-primary" %>
    </div>
  </div>

</div>
