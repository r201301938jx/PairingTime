<%= render 'search_form' %>

<div class="row col-sm-offset-1 col-sm-10 col-sm-offset-1">
  <h2 class="heading text-center">投稿詳細</h2>

  <div class="col-sm-4">
    <%= attachment_image_tag @pair, :image, :fill, 240, 240, fallback: "no_image.jpg", size: "240x240", class: "pair-image"  %>
  </div>

  <div class="col-sm-8">
    <table class="table table-borderless">
      <tbody>
        <tr>
          <td>タイトル</td>
          <td><%= @pair.title %></td>
        </tr>
        <tr>
          <td>説明</td>
          <td><%= @pair.caption %></td>
        </tr>
        <tr>
          <td>タグ</td>
          <td>
            <% @pair.tags.each do |tag| %>
              <span class="label label-info"><%= tag.name %></span>
            <% end %>
          </td>
        </tr>
        <tr>
          <td>投稿者</td>
          <td><%= link_to @pair.customer.nickname, admin_customer_path(@pair.customer) %></td>
        </tr>
        <tr>
          <td>投稿日</td>
          <td><%= @pair.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <td>お気に入り追加数</td>
          <td><%= @pair.likes.count %></td>
        </tr>
      </tbody>
    </table>
    <div class="text-center">
      <%= link_to "削除", admin_pair_path(@pair), method: :DELETE, class: "btn btn-danger btn-block" %>
    </div>
  </div>

  <div class="col-sm-12 comment-section">
    <div class="col-sm-12 label label-primary">
      <h3 class="comment-title">コメント<span class="badge comment-badge"><%= @pair.comments.count %></span></h3>
    </div>

    <div class="comment-list col-sm-12">
      <table>
        <% @comments.each do |comment| %>
        <tr class="comment">
          <td>
            <%= link_to admin_customer_path(comment.customer) do %>
              <%= attachment_image_tag comment.customer, :profile_image, :fill, 40, 40, fallback: "no_customer_image.jpg", size: "40x40", class: "profile-image"  %><br>
              <%= comment.customer.nickname %>
            <% end %>
          <td class="list-group">
            <div class="list-group-item"><%= comment.text %></div>
          </td>
        </tr>
        <% end %>
      </table>
    </div>

  </div>

</div>